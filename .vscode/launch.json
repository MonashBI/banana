    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Box",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/banana/entrypoint.py",
            "console": "integratedTerminal",
            "args": [
                "box",
                "mri.DwiAnalysis",
                "australianimagingservice/dwiqa:0.1",
                "tensor_residual",
                "--xnat",
                "-i", "series",
                "-i", "reverse_phase",
                "-i", "bvalues", "${workspaceFolder}/test/data/bvals.bval",
                "-i", "grad_dirs", "${workspaceFolder}/test/data/bvecs.bvec",
                "--build"
            ]
        },
        {
            "name": "Python: Tensor residual",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/test/scripts/tensor_residual.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: MoCo Test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/motion_detection_siemens.py",
            "console": "internalConsole",
            "args": [
                "--input_dir",
                "${workspaceFolder}/test/data/moco-test",
                "--environment",
                "modules"
            ]
        },
        {
            "name": "Python: Generate T2star Test Data",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/test/unittests/analysis/mri/test_t2star.py",
            "console": "integratedTerminal",
        },
        {
            "name": "Python: Generate DWI Test Data",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/test/unittests/analysis/mri/test_dwi.py",
            "console": "integratedTerminal",
        }
    ]
}